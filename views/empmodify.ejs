<style>
  .main {
    background: #7e84f5;
    width: 100vw;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .box {
    width: 80%;
    height: auto;
    border-bottom-right-radius: 20px;
    border-bottom-left-radius: 20px;
    border-top-right-radius: 30px;
    padding: 15px;
    margin-left: 10px;
    background-color: rgba(41, 39, 39, 0.3);
    box-shadow: 0 5px 30px rgb(214, 204, 204);
    background: transparent;
  }
  .heading {
    font-size: 35px;
    letter-spacing: 1px;
    font-weight: bold;
    text-align: center;
    color: #000;
    margin-bottom: 10px;
  }
  .gstyle {
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
  }
  .button {
    width: 100%;
    box-shadow: 0 5px 30px rgb(214, 204, 204);
  }
</style>
<html>
  <head>
    <title>Employee System</title>
    <link rel="icon" type="image/png" href="/images/icon2.png" />
    <!------- Bootstrap CSS --------->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />

    <!-- Bootstrap Font Icon CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <!--------------------------JQuery----------------------------->
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <!--------------------State / City  JS File------------>
    <script src="/javascripts/state.js"></script>
    <!--------------- CSS ---------->
    <link rel="stylesheet" href="/stylesheets/front.css" />

    <script>
      $(document).ready(function () {
        var gend = $("#gend").val();
        // console.log(gend);
        $(".gd").map((i, item) => {
          // console.log(item);
          if ($(item).val() == gend) {
            $(item).prop("checked", true);
          }
        });
      });
    </script>
  </head>
  <body>
    <div class="main container-table100">
      <div class="box">
        <div class="heading">
          <!-- <i class="bi bi-person-fill"></i> -->
          <img src="/images/emp3.png" width="60" />
          Employee Modification
          <a href="./empdisplay">
            <img src="/images/rec.png" width="50" align="right"
          /></a>
        </div>
        <form action="/employee/emp_edit_del" method="post" class="row g-3">
          <input type="hidden" id="gend" value="<%=data.gender%>" />
          <input type="hidden" name="empid" value="<%=data.empid%>" />
          <div class="input-group">
            <span class="input-group-text"><b>First and Last Name</b></span>
            <input
              type="text"
              aria-label="First name"
              class="form-control"
              placeholder="First Name"
              name="fname"
              value="<%=data.emp_firstname%>"
            />
            <input
              type="text"
              aria-label="Last name"
              class="form-control"
              placeholder="Last Name"
              name="lname"
              value="<%=data.emp_lastname%>"
            />
          </div>
          <label class="col-md-1">
            <b>Gender</b>
          </label>
          <div class="col-md-2">
            <input
              class="form-check-input gd"
              type="radio"
              name="gender"
              id="gender"
              value="Male"
            />
            <label class="form-check-label" for="gender"><b>Male</b> </label>
            <input
              class="form-check-input gd"
              type="radio"
              name="gender"
              id="gender"
              value="Female"
            />
            <label class="form-check-label" for="gender"> <b>Female</b> </label>
          </div>
          <div class="col-md-4">
            <label for="date" class="form-label"><b>DOB</b></label>
            <i class="bi bi-calendar-event"></i>
            <input
              type="date"
              id="date"
              name="dob"
              value="<%=data.dob%>"
              class="form-control"
            />
          </div>
          <div class="col-md-5">
            <label for="phone" class="form-label"><b>Phone</b></label>
            <i class="bi bi-telephone-fill"></i>
            <input
              type="text"
              class="form-control"
              id="phone"
              name="phoneno"
              placeholder="Phone"
              value="<%=data.phoneno%>"
            />
          </div>

          <div class="col-md-12">
            <label for="address" class="form-label"><b>Address</b></label>
            <i class="bi bi-building-add"></i>
            <input
              type="text"
              name="address"
              class="form-control"
              id="address"
              value="<%=data.address%>"
            />
          </div>

          <div class="col-md-6">
            <label for="state" class="form-label"><b>State</b></label>
            <select id="state" name="state" class="form-select">
              <option value="<%=data.state%>"><%=data.state%></option>
            </select>
          </div>

          <div class="col-md-6">
            <label for="city" class="form-label"><b>City</b></label>
            <select id="city" name="city" class="form-select">
              <option value="<%=data.city%>"><%=data.city%></option>
            </select>
          </div>

          <div class="col-md-6">
            <button
              type="submit"
              value="Edit"
              name="button"
              class="btn btn-outline-dark button"
            >
              <i class="bi bi-pencil-square"></i>
              <b>Edit</b>
            </button>
          </div>
          <div class="col-md-6">
            <button
              type="submit"
              value="Delete"
              name="button"
              class="btn btn-outline-dark button"
            >
              <i class="bi bi-trash-fill"></i>
              <b>Delete</b>
            </button>
          </div>
        </form>
      </div>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"
  ></script>
</html>
